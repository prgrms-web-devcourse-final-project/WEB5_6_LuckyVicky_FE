#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh" 

echo "🧐 코드 검사를 시작합니다..."

# npm run lint 실행 및 결과에 따른 처리
if npm run lint; then
  # 성공 시 (종료 코드 0)
  echo "✅ 검사 통과! 코드가 깨끗합니다."
else
  # 실패 시 (종료 코드 1 이상)
  echo "❌ 검사 실패! 아래 문제를 수정해주세요."
  exit 1 # Git 프로세스(커밋/푸시)를 중단시키기 위해 실패 코드로 종료
fi

# ... (이후 다른 명령어가 있다면 여기에 위치)